#!/bin/bash

# Source Config File
. $HOME/bin/dynamicwall.config

date=$(date +%H | sed 's/\<0//g')

echo "Theme currently in use is $cur_theme"
echo "Current theme directory is $theme_dir"
echo "Current ksetwallpaper directory is $kset_dir"
echo "Time is currently $date"
echo "Time offset by $timeoffset"

	if [[ "$olddate" != "$date" ]]; then
		if [[ "$date" -le "9" ]]; then
			$kset_dir "$theme_dir/$cur_theme$(($date - 4 + $timeoffset)).jpeg"
			echo "set $cur_theme$(($date - 4 + $timeoffset)).jpeg"
		elif [[ "$date" -le "16" ]]; then
			$kset_dir "$theme_dir/$cur_theme$(($date - 5 + $timeoffset)).jpeg"
			echo "set $cur_theme$(($date - 5 + $timeoffset)).jpeg"
		elif [[ "$date" -le "21" ]]; then
			$kset_dir "$theme_dir/$cur_theme$(($date - 6 + $timeoffset)).jpeg"
			echo "set $cur_theme$(($date - 6 + $timeoffset)).jpeg"
		else
			$kset_dir "$theme_dir/'$cur_theme'16.jpeg"
			echo "set $cur_theme/'16'.jpeg"
		fi
	fi
	olddate=$date
